    addNewPhoto: {
        value: function () {
            return browser.wait(world.EC.presenceOf(self.photoWidget))
                .then(function () {
                    var path = require('path'),
                        fileToUpload = 'seer.jpg',
                        absolutePath = path.resolve(__dirname + '/../../support/photo/', fileToUpload);
                    return self.photoWidget.sendKeys(absolutePath);
                });
        }
    },

